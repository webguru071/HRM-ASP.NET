@model EMSApp.Models.SALARY_GRADE

@{
    ViewBag.Title = "Delete Salary Benefit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card card-outline-danger">
        <div class="card-header" style="padding:15px">
            <h4 class="m-b-0 text-white">
                Are you sure you want to delete this?
            </h4>
        </div>
        <div class="card-body">
            <form class="form-horizontal" role="form">
                <div class="form-body">
                    <h3 class="box-title">Salary Benefit Details</h3>
                    <hr class="m-t-0 m-b-40">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group row">
                                <label class="control-label text-right col-md-3">Benefit</label>
                                <div class="col-md-9">
                                    @Html.DisplayFor(model => model.GRADE_TITLE)
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                        @if (Model.GRADE_TYPE == EMSApp.Helper.ConstantValue.SalaryGradeAdd)
                        {
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Benefit Action</label>
                                    <div class="col-md-9">
                                        Addition
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model.GRADE_TYPE == EMSApp.Helper.ConstantValue.SalaryGradeDeduct)
                        {
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Benefit Action</label>
                                    <div class="col-md-9">
                                        Deduction
                                    </div>
                                </div>
                            </div>
                        }
                        <!--/span-->
                    </div>
                    <!--/row-->
                  
                        <div class="form-actions">
                            <div class="btn btn-secondary pull-center">
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                            <button type="submit" class="btn btn-danger pull-right">Delete</button>
                        </div>
                    
                </div>
            </form>
        </div>
    </div>
}