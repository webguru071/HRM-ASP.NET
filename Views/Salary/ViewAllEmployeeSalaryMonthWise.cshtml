@model IEnumerable<EMSApp.Models.UserModel.SalaryInfo>

@{
    ViewBag.Title = "All Employee Monthwise Salary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="padding-top:15px">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="btn btn-secondary pull-right">
                        @Html.ActionLink("Back to List", "AllEmpIndex")
                    </div>
                    <h4 class="card-title">Employee Salary List</h4>
                    <div class="table-responsive">
                        <table class="table color-bordered-table primary-bordered-table">
                            <thead>
                                <tr>
                                    <th>
                                        For Month
                                    </th>
                                    <th>
                                        Employee
                                    </th>
                                    <th>
                                        Salary
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.SALARY_INFO != null)
                                {
                                    foreach (var item in (ViewBag.SALARY_INFO as List<EMSApp.Models.UserModel.SalaryInfo>))
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SALARY_PAID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EMPLOYEE_NAME)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GROSS_SALARY)
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>