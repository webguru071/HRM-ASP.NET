@model EMSApp.Models.DEPARTMENT_INFO

@{
    ViewBag.Title = "Edit Department Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.HiddenFor(model => model.DEPT_ID)
        <div class="form-horizontal" style="padding:15px">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Department Details</h4>
                    <form class="form-material m-t-40">
                        <div class="alert alert-danger" style="font-weight:900">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
                        <div class="com-md-6">
                            <div class="form-group">
                                Department Title
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DEPT_TITLE, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DEPT_TITLE, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="com-md-6">
                            <div class="form-group">
                                Remarks
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.REMARKS, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.REMARKS, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="btn btn-secondary pull-center">
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


