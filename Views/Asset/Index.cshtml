@model IEnumerable<EMSApp.Models.ASSET_INFO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Action</th>
        <th>
            Asset Type
        </th>
        <th>
            Remarks
        </th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("View", "Edit", new { id = item.ASSET_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ASSET_ID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ASSET_TITLE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.REMARKS)
                </td>
            </tr>
        }
    }

</table>
