@model EMSApp.Models.ASSET_INFO

@{
    ViewBag.Title = "Create Asset Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" style="padding:15px">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Asset Type Details</h4>
                <form class="form-material m-t-40">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        Asset Type
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ASSET_TITLE, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ASSET_TITLE, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="com-md-6">
                        <div class="form-group">
                            Remark
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.REMARKS, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.REMARKS, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Save</button>
                </form>
            </div>
        </div>
    </div>
}

