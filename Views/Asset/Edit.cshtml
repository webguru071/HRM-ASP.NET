@model EMSApp.Models.ASSET_INFO

@{
    ViewBag.Title = "Edit Asset Type Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ASSET_ID)
    <div class="form-horizontal" style="padding:15px">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Asset Type Details</h4>
                <form class="form-material m-t-40">
                    <div class="alert alert-danger" style="font-weight:900">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
                    <div class="form-group">
                        Asset Caterogy
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ASSET_TITLE, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ASSET_TITLE, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="com-md-6">
                        <div class="form-group">
                            Remark
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.REMARKS, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.REMARKS, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="btn btn-secondary pull-center">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}



