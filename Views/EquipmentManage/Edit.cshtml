@model EMSApp.Models.ASSET_MANAGEMENT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" style="padding:15px">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Asset Assign</h4>
                <form class="form-material m-t-40">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ASSET_MNG_ID)
                    <div class="form-group">
                        Employee
                        <div class="col-md-10">
                            @Html.DropDownList("EMP_ID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EMP_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        Equipment
                        <div class="col-md-10">
                            @Html.DropDownList("EQUP_ID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EQUP_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        Assign Date
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DATE_ASSN, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.DATE_ASSN, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        Return Date
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DATE_RTN, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.DATE_ASSN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        Remark
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.REMARKS, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.REMARKS, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="btn btn-secondary pull-center">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Update</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
}


