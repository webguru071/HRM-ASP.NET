        </div>
    </div>
    <div class="form-group">
        Asset
        <div class="col-md-10">
            @Html.EditorFor(model => model.EQUP_ID, new { htmlAttributes = new { @class = "form-control" } })            
        </div>
    </div>
    <div class="form-group">
        Equipment
        <div class="col-md-10">
            @Html.EditorFor(model => model.EQUP_ID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EQUP_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Assign Date
        <div class="col-md-10">
            @Html.EditorFor(model => model.DATE_ASSN, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
