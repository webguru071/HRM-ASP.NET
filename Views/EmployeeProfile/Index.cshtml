@model EMSApp.Models.EMPLOYEE_INFO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <hr />
    @if (Model != null)
    {
        <div class="row col-md-3">
            <p class="btn btn-block btn-outline-warning btn-md">
                @Html.ActionLink("Update Profile", "Edit", new { id = Model.ID })
            </p>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-outline-info">
                    <div class="card-header">
                        <h4 class="m-b-0 text-white">Employee All Details</h4>
                    </div>
                    <div class="card-body">
                        <form action="#" class="form-horizontal">
                            <div class="form-body">
                                <h3 class="box-title">Person Info</h3>
                                <hr class="m-t-0 m-b-40">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Name</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" readonly="readonly" value=" @Html.DisplayFor(model => model.EMPLOYEE_NAME)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group has row">
                                            <label class="control-label text-right col-md-3">Address</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control form-control" readonly="readonly" value=" @Html.DisplayFor(model => model.ADDRESS)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <!--/row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Contact</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" readonly="readonly" value=" @Html.DisplayFor(model => model.CONTACT)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group has row">
                                            <label class="control-label text-right col-md-3">Email</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control form-control" readonly="readonly" value="@Html.DisplayFor(model => model.EMAIL)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <!--/row-->
                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group has row">
                                            <label class="control-label text-right col-md-3">Date of Birth</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control form-control" readonly="readonly" value="@Html.DisplayFor(model => model.DOB)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">NID</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" readonly="readonly" value="@Html.DisplayFor(model => model.NID)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->

                                </div>
                                <!--/row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">City</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" readonly="readonly" value="@Html.DisplayFor(model => model.CITY)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group has row">
                                            <label class="control-label text-right col-md-3">Postal Code</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control form-control" readonly="readonly" value="@Html.DisplayFor(model => model.POSTAL_CODE)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <!--/row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Nationality</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" readonly="readonly" value="@Html.DisplayFor(model => model.NATIONALITY)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group has row">
                                            <label class="control-label text-right col-md-3">Blood Group</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control form-control" readonly="readonly" value="@Html.DisplayFor(model => model.BLOOD_GROUP)">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <!--/row-->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (Model == null)
    {
        <div class="alert alert-success">You Are a Super Admin!!! <br /> No Profile To Show.</div>
    }
</div>
