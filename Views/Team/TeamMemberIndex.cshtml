@model IEnumerable<EMSApp.Models.TEAM_DETAILS>

@{
    ViewBag.Title = "TeamMemberIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <p class="btn btn-warning pull-left">
                    @Html.ActionLink("Create New", "TeamMember")
                </p>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">All Teams</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                <th>
                                    Team
                                </th>
                                <th>
                                   Member
                                </th>
                                <th>
                                    Remarks
                                </th>
                                <th>
                                    Action
                                </th>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TEAM_INFO.TEAM_TITLE)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EMPLOYEE_INFO.EMPLOYEE_NAME)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.REMARKS)
                                                </td>

                                                <td>
                                                    @Html.ActionLink("View", "TeamMemberEdit", new { id = item.ID })
                                                </td>
                                            </tr>
                                        }

                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>