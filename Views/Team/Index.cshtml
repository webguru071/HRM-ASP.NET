@model IEnumerable<EMSApp.Models.TEAM_INFO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <p class="btn btn-warning pull-left">
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">All Teams</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                        <th>
                            Action
                        </th>
                        <th>
                            Team Title
                        </th>
                        <th>
                            Team Leader
                        </th>
                        <th>
                            Remarks
                        </th>
                        </thead>
                        <tbody>
                            <tr>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.ActionLink("View", "Edit", new { id = item.ID })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TEAM_TITLE)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EMPLOYEE_INFO.EMPLOYEE_NAME)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.REMARKS)
                                        </td>
                                    </tr>
                                }

                            }
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
