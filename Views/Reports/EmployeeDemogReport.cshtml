@model IEnumerable<EMSApp.Models.UserModel.EmployeeReport>

@{
    ViewBag.Title = "Employee Demographic Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-12" style="padding-top:15px">
        <div class="card card-body">
            <h3 class="box-title m-b-0">Filters</h3>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    @Html.DropDownList("EMPLOYEE_ID", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("IS_DELETED", new SelectListItem[]
                     {
                                     new SelectListItem { Text = "Select Status", Value="" },
                                    new SelectListItem { Text = "Active", Value=EMSApp.Helper.ConstantValue.UserStatusActive },
                                    new SelectListItem{ Text="Deactive",Value=EMSApp.Helper.ConstantValue.UserStatusDeactive },},
                         htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-success waves-effect waves-light m-t-10 pull-right">Search</button>

                </div>
            </div>
        </div>
    </div>
    if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-outline-info">
                        <div class="card-header">
                            <h4 class="m-b-0 text-white">Employee All Details</h4>
                        </div>
                        <div class="card-body">
                            <form action="#" class="form-horizontal">
                                <div class="form-body">
                                    <h3 class="box-title">Person Info</h3>
                                    <hr class="m-t-0 m-b-40">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">Name</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.EMPLOYEE_NAME">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Address</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.ADDRESS">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">Contact</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.CONTACT">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Email</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.EMAIL">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Date of Birth</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.DOB">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">NID</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.NID">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->

                                    </div>
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">City</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.CITY">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Postal Code</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.POSTAL_CODE">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">Gender</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.GENDER_TEXT">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Marital Status</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.MARITALA_STATUS_TEXT">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">Nationality</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.NATIONALITY">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Blood Group</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.BLOOD_GROUP">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <h3 class="box-title">Positional Info</h3>
                                    <hr class="m-t-0 m-b-40">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">Department</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.DEPT_TITLE">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Division</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.DIV_TITLE">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">Designation</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.POSITION_TITLE">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Duty</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.DUTY_TYPE_TEXT">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">Rate Type</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.RATE_TYPE_TEXT">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Payment Frequency</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.PAY_FREQ_TEXT">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group has row">
                                                <label class="control-label text-right col-md-3">Joinning Date</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control form-control" readonly="readonly" value="@item.JOINING_DATE">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="control-label text-right col-md-3">Resigning Date</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" readonly="readonly" value="@item.RESIGNING_DATE">
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}

