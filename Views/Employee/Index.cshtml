@model IEnumerable<EMSApp.Models.EMPLOYEE_INFO>

@{
    ViewBag.Title = "All Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <p class="btn btn-primary pull-left">
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Designation
            </th>
            <th>
                Contact
            </th>
            <th>
                Address
            </th>
            <th>
                Joining Date
            </th>
            <th>
                Action
            </th>
        </tr>

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EMPLOYEE_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DESIGNATION)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CONTACT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ADDRESS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JOINING_DATE)
                    </td>

                    <td>
                        @Html.ActionLink("View", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        }

    </table>

</div>

