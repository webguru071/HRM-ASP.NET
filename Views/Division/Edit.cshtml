@model EMSApp.Models.DIVISION_INFO

@{
    ViewBag.Title = "Edit Division";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.HiddenFor(model => model.DIV_ID)
        <div class="form-horizontal" style="padding-top:15px">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit Division Details</h4>
                    <div class="alert alert-danger" style="font-weight:900">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
                    <form class="form-material m-t-40">
                        <div class="form-group">
                            Department
                            <div class="col-md-10">
                                @Html.DropDownList("DEPT_ID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DEPT_ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            Division Title
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DIV_TITLE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DIV_TITLE, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="btn btn-secondary pull-center">
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}



