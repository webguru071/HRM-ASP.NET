@model EMSApp.Models.TRANSACTION_ITEM

@{
    ViewBag.Title = "Edit Income Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TRNS_ID)

    <div class="form-horizontal" style="padding:15px">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Income Source</h4>
                <form class="form-material m-t-40">
                    <div class="" style="font-weight:900">@Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })</div>
                    <div class="form-group">
                        Income Source
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TRNS_TITLE, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TRNS_TITLE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="btn btn-secondary pull-center">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Update</button>
                </form>
            </div>
        </div>
    </div>
}


