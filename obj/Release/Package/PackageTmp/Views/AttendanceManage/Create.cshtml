@model EMSApp.Models.ATTENDANCE_DETAILS

@{
    ViewBag.Title = "Daily Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-6" style="padding-top:15px;">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Daily Attendance </h4>
                <hr />
                <div class="" style="font-weight:900">@Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })</div>
                <form class="form-material m-t-40">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-12 icheck-list">
                                <input type="radio" class="check" id="checkIn" name="checkIn" data-radio="iradio_square-red">
                                <label for="checkIn">Check In</label>
                                <input type="radio" class="check" id="checkOut" name="checkOut" data-radio="iradio_square-red">
                                <label for="checkOut">Check Out</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            Password
                            <input id="pass" name="pass" type="password" class="form-control" />
                            <button style="margin:10px" type="submit" class="btn btn-primary pull-right">Enter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


