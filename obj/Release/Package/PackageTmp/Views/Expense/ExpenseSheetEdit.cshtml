@model EMSApp.Models.TRANSACTION_SHEET

@{
    ViewBag.Title = "Expense List Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TRNS_S_ID)
    <div class="form-horizontal" style="padding:15px">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Expenses List</h4>
                <form class="form-material m-t-40">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        Date
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DATE, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.DATE, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        Expense Item
                        <div class="col-md-10">
                            @Html.DropDownList("TRNS_ID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TRNS_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        Voucher
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VOUCHER_NO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VOUCHER_NO, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        Amount
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AMOUNT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AMOUNT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        Payment Type
                        <div class="col-md-10">
                            @Html.DropDownList("PAY_TYPE", new SelectListItem[]
                                                                {
                                                                    new SelectListItem { Text = "Select One", Value="" },
                                                                    new SelectListItem { Text = "Cash", Value="c" },
                                                                    new SelectListItem{ Text="Bank",Value="b" },},
                                                                    htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PAY_TYPE, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        Remarks
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.REMARKS, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.REMARKS, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="btn btn-secondary pull-center">
                            @Html.ActionLink("Back to List", "ExpenseSheetIndex")
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>   
</div>
}

