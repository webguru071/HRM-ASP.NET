@model EMSApp.Models.UserModel.SalaryInfo

@{
    ViewBag.Title = "All Employee Salary Generate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Employee Salary Details</h4>
                    <hr />
                </div>
                <div class="card-body">
                    <div id="typography">
                        <form>
                            <div class="" style="font-weight:900">@Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })</div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Payment Month</label>
                                        @Html.DropDownList("SALARY_MONTH", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Payment Year</label>
                                        @Html.DropDownList("SALARY_YEAR", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="btn btn-secondary pull-center">
                                    @Html.ActionLink("Back to List", "AllEmpIndex")
                                </div>
                                <button type="submit" class="btn btn-primary pull-right">Generate</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="padding-top:15px">
        <div class="row">           
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Employee Salary List</h4>
                        <div class="table-responsive">
                            <table class="table color-bordered-table primary-bordered-table">
                                <thead>
                                    <tr>
                                        <th>
                                            Employee
                                        </th>
                                        <th>
                                            Salary
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.SALARY_INFO != null)
                                    {
                                        foreach (var item in (ViewBag.SALARY_INFO as List<EMSApp.Models.UserModel.SalaryInfo>))
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EMPLOYEE_NAME)
                                                </td>                                                
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.GROSS_SALARY)
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        function GetEmpInfo() {
            var id = $('#EMP_ID').val();
            $.ajax({
                url: "@Url.Action("GetEmpInfo", "Salary")",
                type: "GET",
                dataType: "JSON",
                data: { id: id },
                success: function (listOfData) {
                    $('#GROSS_SALARY').val(listOfData["GROSS_SALARY"]);
                },
                error: function (data) {
                    alert("Error");
                }
            });
        }
    </script>
}
