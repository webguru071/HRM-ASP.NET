@model IEnumerable<EMSApp.Models.SALARY_INFO>

@{
    ViewBag.Title = "Employee Salary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="padding-top:15px">
    <div class="row">
        <div class="col-md-3">
            <p class="btn btn-block btn-outline-success btn-md">
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Employee Salary</h4>
                    <div class="table-responsive">
                        <table class="table color-bordered-table primary-bordered-table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        Employee
                                    </th>
                                    <th>
                                        Paid Date
                                    </th>
                                    <th>
                                        Total Salary
                                    </th>
                                    <th>
                                        Remarks
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <td>
                                        @Html.ActionLink("View", "Edit", new { id = item.ID })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EMPLOYEE_INFO.EMPLOYEE_NAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SALARY_PAID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TOTAL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.REMARKS)
                                    </td>
                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>