@model IEnumerable<EMSApp.Models.LEAVE_TYPE>
@{
    ViewBag.Title = "Leave Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="padding-top:15px">
    <div class="row">
        <div class="col-md-3">
            <p class="btn btn-block btn-outline-success btn-md">
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Leave Type</h4>
                    <div class="table-responsive">
                        <table class="table color-bordered-table info-bordered-table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        Leave Type
                                    </th>
                                    <th>
                                        Remarks
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <td>
                                        @Html.ActionLink("View", "Edit", new { id = item.LEAVE_ID })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LEAVE_TITLE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.REMARKS)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Delete", "Delete", new { id = item.LEAVE_ID })
                                    </td>
                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
