@model IEnumerable<EMSApp.Models.INCREMENT_INFO>

@{
    ViewBag.Title = "Increment List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="padding-top:15px">
    <div class="row">
        <div class="col-md-3">
            <p class="btn btn-block btn-outline-success btn-md">
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Increments</h4>
                    <div class="table-responsive">
                        <table class="table color-bordered-table info-bordered-table">
                            <thead>
                                <tr>
                                    <th></th>

                                    <th>
                                        Employee
                                    </th>
                                    <th>Increment From</th>
                                    <th>Increment Type</th>
                                    <th>Rate</th>
                                    <th>
                                        Remarks
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.INCREMENT_ID })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EMPLOYEE_INFO.EMPLOYEE_NAME)
                                    </td>
                                    <td>
                                       @item.INCREMENT_FROM.ToString("dd-MM-yyyy")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.INCREMENT_TYPE_INFO.INCREMENT_TYPE_TITLE)
                                    </td>
                                    <td>
                                        @{ 
                                            string rateType = "";
                                            if (item.INCREMENT_CALCULATE_AS == EMSApp.Helper.ConstantValue.SalarySetupInAmount)
                                            {
                                                rateType = " Tk.";
                                            }
                                            else
                                            {
                                                rateType = "%";
                                            }
                                        }
                                        @Html.DisplayFor(modelItem => item.INCREMENT_RATE)@rateType
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.REMARKS)
                                    </td>
                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
