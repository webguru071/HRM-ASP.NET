@model EMSApp.Models.CARD_ASSIGN_INFO

@{
    ViewBag.Title = "New Card Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" style="padding:15px">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">New Card Assign</h4>
                <hr />
                <form class="form-material m-t-40">
                    <div class="" style="font-weight:900">@Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })</div>
                    <div class="row p-t-20">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Employee</label>
                                @Html.DropDownList("EMP_ID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EMP_ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Card No.</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CARD_NO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CARD_NO, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="form-actions">
                        <div class="btn btn-secondary pull-center">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
