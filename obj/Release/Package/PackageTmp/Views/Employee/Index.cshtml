@model IEnumerable<EMSApp.Models.EMPLOYEE_INFO>

@{
    ViewBag.Title = "All Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <p class="btn btn-primary pull-left">
            @Html.ActionLink("Create New", "Create")
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EMPLOYEE_NAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ADDRESS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CONTACT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EMAIL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IMAGE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IS_DELETED)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JOINING_DATE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RESIGNING_DATE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DESIGNATION)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ACTION_BY)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ACTION_DATE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UPDATE_BY)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UPDATE_DATE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CITY)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.POSTAL_CODE)
                </th>
                <th></th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EMPLOYEE_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ADDRESS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CONTACT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EMAIL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IMAGE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IS_DELETED)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JOINING_DATE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RESIGNING_DATE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DESIGNATION)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ACTION_BY)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ACTION_DATE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UPDATE_BY)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UPDATE_DATE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CITY)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.POSTAL_CODE)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            }

        </table>
    </div>

