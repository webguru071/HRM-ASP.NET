@model EMSApp.Models.TRANSACTION_SHEET

@{
    ViewBag.Title = "Delete Income List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-outline-danger">
    <div class="card-header" style="padding:15px">
        <h4 class="m-b-0 text-white">
            Are you sure you want to delete this?
        </h4>
    </div>
    <div class="card-body">
        <form class="form-horizontal" role="form">
            <div class="form-body">
                <h3 class="box-title">Income Source List</h3>
                <hr class="m-t-0 m-b-40">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Date</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.DATE)
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Expense</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.TRANSACTION_ITEM.TRNS_TITLE)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Amount</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.AMOUNT)
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Remarks</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.REMARKS)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Voucher</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.VOUCHER_NO)
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions">
                        <div class="btn btn-secondary pull-center">
                            @Html.ActionLink("Back to List", "IncomeSheetIndex")
                        </div>
                        <button type="submit" class="btn btn-danger pull-right">Delete</button>
                    </div>
                }
            </div>
        </form>
    </div>
</div>